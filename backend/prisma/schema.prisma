generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Leaderboard {
  id        Int @id @default(autoincrement())
  username  String @default("Guest player")
  gamename  String
  seconds   Int 
}

model Game {
  id          Int @id @default(autoincrement())
  imgPath     String
  baseWidth   Int
  baseHeight  Int
  characters Character[]
}

model Character {
  id          Int @id @default(autoincrement())
  gameId      Int 
  game Game   @relation(fields: [gameId], references: [id])
  imgPath     String
  width       Int
  height      Int
  x           Int
  y           Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}